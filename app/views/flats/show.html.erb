<div class="header-container">
  <%= link_to "Simple Airbnb", flats_path, style: "text-decoration: none; color: inherit;" %>
  <%= link_to "Add flat", new_flat_path, class: "btn btn-outline-primary" %>
</div>

<div class="row flat-container">
  <div class="col-md-8">
    <div class="show-box">
      <h1><%= @flat.name %></h2>
      <p><%= @flat.address %></p>
    </div>

    <div class="show-box">
      <h3>A bit more about this flat...</h3>
      <p><%= @flat.description %></p>
    </div>

    <div class="show-box">
      <h3>Details</h3>
      <div class="flat-details">
        <p><i class="fa-solid fa-user-group"></i> <%= @flat.number_of_guests %></p>
        <p><i class="fa-solid fa-euro-sign"></i> <%= @flat.price_per_night %></p>
      </div>
    </div>
  </div>

  <div class="col-md-4">
    <div class="show-box">
      <p>Book this place!</p>
    </div>

    <div class="show-box">
      <p>Share</p>
    </div>
  </div>
</div>
