<div class="header-container">
  <%= link_to "Simple Airbnb", flats_path, style: "text-decoration: none; color: inherit;" %>
  <%= link_to "Add flat", new_flat_path, class: "btn btn-outline-primary" %>
</div>

<div class="row flat-container">
  <h1>All our Flats (<%= @flats.count %>)</h1>

  <% @flats.each do |flat| %>
    <div class="col-4">
      <div class="flat-card">
        <div class="flat-name">
          <h3 class="clamp-two-lines"><%= flat.name %></h3>
          <p><%= flat.address %></p>
        </div>

        <div class="flat-details">
          <p><i class="fa-solid fa-user-group"></i> <%= flat.number_of_guests %></p>
          <p><i class="fa-solid fa-euro-sign"></i> <%= flat.price_per_night %></p>
        </div>

      </div>

      <div class="more-info">
        <%= link_to "More info", flat_path(flat), class: "link-primary", style: "margin-right: 10px;", style: "margin-left: 10px;" %>
        <%= link_to "Edit", edit_flat_path(flat), class: "link-warning", style: "margin-right: 10px;", style: "margin-left: 10px;" %>
        <%= link_to "Remove", flat_path(flat),
        data: {turbo_method: :delete, turbo_confirm: "Delete #{flat.name}?"},
        class: "link-danger", style: "margin-left: 10px;" %>
      </div>
    </div>
  <% end %>
</div>
