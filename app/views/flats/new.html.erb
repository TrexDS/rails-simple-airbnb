<div class="header-container">
  <%= link_to "Simple Airbnb", flats_path, style: "text-decoration: none; color: inherit;" %>
  <%= link_to "Add flat", new_flat_path, class: "btn btn-outline-primary" %>
</div>

<div class="row">
  <div class="col-6 m-auto">
    <div class="new-flat-form">
      <h1>Add a new Flat</h1>
      <%= simple_form_for @flat do |f| %>
        <%= f.input :name %>
        <%= f.input :address %>
        <%= f.input :description %>
        <%= f.input :price_per_night %>
        <%= f.input :number_of_guests %>
        <%= f.submit "Submit", class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
</div>
